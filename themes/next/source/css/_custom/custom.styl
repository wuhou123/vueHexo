#checks{
	width:80px;
	float:left;
	height:44px;
	border-right:none;
	color: #428bca;
	animation:warn 800ms ease-out infinite alternate;
	-webkit-animation:warn 800ms ease-out infinite alternate; /* Safari 和 Chrome */
}
@keyframes warn {
    0% {
    border-color: #7c94e4;
    box-shadow: 0 0 5px #7c94e4 inset;
    }	
    100% {
	border-color: #1b3cc8;
    box-shadow: 0 0 20px #1b2eaa inset;
    }	
}
@-webkit-keyframes warn {
    0% {
    border-color: #7c94e4;
    box-shadow: 0 0 5px #7c94e4 inset;
    }	
    100% {
	border-color: #1b3cc8;
    box-shadow: 0 0 20px #1b2eaa inset;
    }	
}
//二维码生成
.mobile{
	position:relative;
	display:inline-block;
	color:#00ce0d;
	margin-left:50px
}
.getQrcode{
	position:absolute;
	top:-100px;
	left:-10px;
	transition:all 1s ease-in;
	width:100px;
	height:100px;
	transform:scale(0);
	background:#eee
}
.mobile:hover .getQrcode{
	display:block;
	top:-100px;
	left:-10px;
	transform:scale(1)
}
